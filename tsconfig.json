{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM",
      "dom.iterable",
      "scripthost"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "vite/client",
      "vitest/globals"
    ]
  },
  "paths": {
    "@/*": [
      "./src/*",
      "./dist/*",
    ],
    "@test/*": [
      "./test/*",
      "./test/unit/*"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "test/unit/**/*.ts",
    "test/unit/src/**/*.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}